<div class="container" align="center">
  <%= render "shared/errors", obj: @category %>
  <div class="row">
    <div class="col-xs-12">
      <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-sm-4 col-sm-offset-4">
          <%= f.text_field :name, class: "form-control", placeholder: "Add a category", autofocus: true %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-12">
        <h3><%= f.submit class: "btn btn-primary btn-lg" %> [ <%= link_to "Cancel", articles_path %> ]</h3>
      </div>
    <% end %>
  </div>
</div>
