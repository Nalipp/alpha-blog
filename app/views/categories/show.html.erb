<div class="container">
  <h1 align="center"><%= "Category: " + @category.name %></h1>
    <div align="center">
      <% if logged_in? && current_user.admin? %>
        <div class="article-actions">
          <%= link_to "Edit category", edit_category_path(@category), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete this category", category_path(@category), method: :delete,
                                              data: {confirm: "Are you sure you want to delete this category?"}, class: "btn btn-xs btn-danger" %>
        </div><br>
      <% end %>
    </div>
    <%= render 'articles/article', obj: @category_articles %>
    <div align="center">
      <%= will_paginate @category_articles %>
    </div>
</div>
